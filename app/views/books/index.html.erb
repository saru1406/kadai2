<h1>Books</h1>


<% @books.each do |book| %>
 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  </table>
  
  </table>
   <tbody>
    
   <tr>
    <th><%= book.title %></td>
    <th><%= book.body %></td>
    <th><%= link_to "Show", "/books/#{book.id}" %></td>
    <th><%= link_to "Edit", edit_book_path(book.id) %></td>
    <th><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
   </tr>
  </tbody>
 </table>
 
 
 <% end %>
 
 <h1>New Book</h1>
 
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
 

<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>